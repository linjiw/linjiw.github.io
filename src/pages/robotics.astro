---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Pill from '../components/Pill.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

// Get Robotics projects
const allProjects = await getCollection('work');
const roboticsProjects = allProjects.filter(project => project.data.category === 'robotics');
---

<BaseLayout
	title="Robotics Research | Linji Wang"
	description="Robotics research focusing on manipulation, perception, and autonomous systems with AI integration."
>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20">
			<header class="hero">
				<Hero
					title="Robotics & Autonomous Systems"
					tagline="Building intelligent robotic systems that perceive, reason, and interact with the world through advanced AI, computer vision, and control theory."
					align="start"
				>
					<div class="roles">
						<Pill><Icon icon="rocket-launch" size="1.33em" /> Manipulation</Pill>
						<Pill><Icon icon="strategy" size="1.33em" /> Perception</Pill>
						<Pill><Icon icon="trophy" size="1.33em" /> RL</Pill>
					</div>
				</Hero>

				<div class="hero-image">
					<div class="robot-visualization">
						<div class="robot-arm">
							<div class="joint base"></div>
							<div class="link link1"></div>
							<div class="joint shoulder"></div>
							<div class="link link2"></div>
							<div class="joint elbow"></div>
							<div class="link link3"></div>
							<div class="end-effector"></div>
						</div>
					</div>
				</div>
			</header>
		</div>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Research Areas</h3>
					<p>My robotics research focuses on creating intelligent systems that can seamlessly integrate with human environments.</p>
				</header>

				<div class="research-areas">
					<div class="research-card">
						<Icon icon="rocket-launch" size="2em" color="#FF6B35" />
						<h4>Robotic Manipulation</h4>
						<p>Developing advanced grasping and manipulation algorithms using reinforcement learning and curriculum learning approaches.</p>
					</div>
					<div class="research-card">
						<Icon icon="strategy" size="2em" color="#FF6B35" />
						<h4>3D Perception</h4>
						<p>Real-time computer vision systems for object detection, tracking, and scene understanding in dynamic environments.</p>
					</div>
					<div class="research-card">
						<Icon icon="trophy" size="2em" color="#FF6B35" />
						<h4>Sim-to-Real Transfer</h4>
						<p>Bridging the reality gap between simulation and real-world deployment through domain adaptation techniques.</p>
					</div>
				</div>
			</section>

			<section class="section with-background bg-variant">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Featured Robotics Projects</h3>
					<p>Explore my work in robotics, from reinforcement learning for manipulation to AR-guided human-robot collaboration.</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{roboticsProjects.map((project) => (
							<li>
								<PortfolioPreview project={project} />
							</li>
						))}
					</Grid>
				</div>

				<div class="cta">
					<a href={import.meta.env.BASE_URL + '/work/'} class="btn-primary">
						View All Projects
						<Icon icon="arrow-right" size="1.2em" />
					</a>
				</div>
			</section>

			<section class="section">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Technical Stack</h3>
					<p>Technologies and frameworks I use for robotics research and development.</p>
				</header>

				<div class="tech-ecosystem">
					<div class="tech-category">
						<h4>Robotics Frameworks</h4>
						<div class="tech-tags">
							<span class="tech-tag">ROS/ROS2</span>
							<span class="tech-tag">MoveIt</span>
							<span class="tech-tag">Nav2</span>
						</div>
					</div>
					<div class="tech-category">
						<h4>Simulation</h4>
						<div class="tech-tags">
							<span class="tech-tag">Gazebo</span>
							<span class="tech-tag">IsaacGym</span>
							<span class="tech-tag">PyBullet</span>
						</div>
					</div>
					<div class="tech-category">
						<h4>Perception</h4>
						<div class="tech-tags">
							<span class="tech-tag">PCL</span>
							<span class="tech-tag">Open3D</span>
							<span class="tech-tag">OpenCV</span>
						</div>
					</div>
					<div class="tech-category">
						<h4>Hardware</h4>
						<div class="tech-tags">
							<span class="tech-tag">Franka Emika</span>
							<span class="tech-tag">Intel RealSense</span>
							<span class="tech-tag">NVIDIA Jetson</span>
						</div>
					</div>
				</div>
			</section>

			<section class="section with-background">
				<header class="section-header stack gap-2 lg:gap-4">
					<h3>Lab Experience</h3>
					<p>Research positions and collaborations in leading robotics laboratories.</p>
				</header>

				<div class="lab-experience">
					<div class="lab-card">
						<div class="lab-header">
							<h4>AI & Robotics Lab</h4>
							<span class="institution">George Mason University</span>
						</div>
						<p class="role">Graduate Research Assistant (2023 - Present)</p>
						<ul class="achievements">
							<li>Leading research on curriculum learning for robotic manipulation</li>
							<li>Developing sim-to-real transfer techniques</li>
							<li>Collaborating on NSF-funded robotics project</li>
						</ul>
					</div>

					<div class="lab-card">
						<div class="lab-header">
							<h4>CERLab</h4>
							<span class="institution">Carnegie Mellon University</span>
						</div>
						<p class="role">Research Assistant (2021 - 2022)</p>
						<ul class="achievements">
							<li>Developed real-time 3D perception pipeline</li>
							<li>Implemented AR visualization for robot guidance</li>
							<li>Published 2 conference papers on visual perception</li>
						</ul>
					</div>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
	}

	.hero-image {
		width: 100%;
		max-width: 400px;
		height: 300px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 107, 53, 0.3) 100%);
		border-radius: 1.5rem;
		overflow: hidden;
	}

	.robot-visualization {
		position: relative;
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.robot-arm {
		position: relative;
		transform: scale(0.8);
	}

	.joint {
		width: 20px;
		height: 20px;
		background: #FF6B35;
		border-radius: 50%;
		position: absolute;
		border: 3px solid #fff;
	}

	.base {
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 30px;
		height: 30px;
	}

	.link {
		background: linear-gradient(90deg, #FF6B35, #FF8A65);
		border-radius: 8px;
		position: absolute;
	}

	.link1 {
		width: 80px;
		height: 12px;
		bottom: 15px;
		left: calc(50% + 15px);
		transform: rotate(45deg);
		transform-origin: left center;
	}

	.shoulder {
		bottom: 50px;
		left: calc(50% + 50px);
	}

	.link2 {
		width: 70px;
		height: 10px;
		bottom: 60px;
		left: calc(50% + 70px);
		transform: rotate(-30deg);
		transform-origin: left center;
	}

	.elbow {
		bottom: 90px;
		left: calc(50% + 120px);
	}

	.link3 {
		width: 40px;
		height: 8px;
		bottom: 100px;
		left: calc(50% + 140px);
		transform: rotate(-45deg);
		transform-origin: left center;
	}

	.end-effector {
		width: 15px;
		height: 15px;
		background: #4CAF50;
		border-radius: 3px;
		position: absolute;
		bottom: 115px;
		left: calc(50% + 165px);
		animation: robotGrip 3s ease-in-out infinite;
	}

	@keyframes robotGrip {
		0%, 100% {
			transform: scale(1);
			background: #4CAF50;
		}
		50% {
			transform: scale(1.2);
			background: #66BB6A;
		}
	}

	.roles {
		display: none;
	}

	.research-areas {
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr;
	}

	.research-card {
		background: var(--gray-999_40);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		padding: 2rem;
		text-align: center;
		transition: transform 0.2s ease;
	}

	.research-card:hover {
		transform: translateY(-4px);
	}

	.research-card h4 {
		margin: 1rem 0 0.5rem;
		color: var(--gray-0);
		font-size: var(--text-lg);
	}

	.research-card p {
		color: var(--gray-300);
		line-height: 1.6;
	}

	.tech-ecosystem {
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr;
	}

	.tech-category h4 {
		color: var(--gray-0);
		margin-bottom: 1rem;
		font-size: var(--text-lg);
	}

	.tech-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tech-tag {
		background: #FF6B35;
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 2rem;
		font-size: var(--text-sm);
		font-weight: 500;
	}

	.lab-experience {
		display: grid;
		gap: 2rem;
		grid-template-columns: 1fr;
	}

	.lab-card {
		background: var(--gray-999_40);
		border: 1px solid var(--gray-800);
		border-radius: 1rem;
		padding: 2rem;
	}

	.lab-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 0.5rem;
	}

	.lab-header h4 {
		color: var(--gray-0);
		font-size: var(--text-lg);
		margin: 0;
	}

	.institution {
		color: #FF6B35;
		font-weight: 500;
		font-size: var(--text-sm);
	}

	.role {
		color: var(--gray-300);
		font-style: italic;
		margin-bottom: 1rem;
	}

	.achievements {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.achievements li {
		color: var(--gray-300);
		line-height: 1.6;
		margin-bottom: 0.5rem;
		padding-left: 1rem;
		position: relative;
	}

	.achievements li::before {
		content: 'â–¸';
		color: #FF6B35;
		position: absolute;
		left: 0;
	}

	.btn-primary {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		background: #FF6B35;
		color: white;
		padding: 1rem 2rem;
		border-radius: 999rem;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.2s ease;
	}

	.btn-primary:hover {
		background: #E5531D;
		transform: translateY(-2px);
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
		}

		.research-areas {
			grid-template-columns: repeat(3, 1fr);
		}

		.tech-ecosystem {
			grid-template-columns: repeat(2, 1fr);
		}

		.lab-experience {
			grid-template-columns: repeat(2, 1fr);
		}
	}

	/* Section styling */
	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);
		content: '';
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url('/linjiwang/assets/backgrounds/noise.png') top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: 'header header header header' 'content content content content';
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: 'header header header cta' 'content content content content';
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery, .research-areas, .tech-ecosystem, .lab-experience {
			grid-area: content;
		}

		.cta {
			grid-area: cta;
		}
	}
</style>